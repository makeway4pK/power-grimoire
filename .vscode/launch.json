  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell: Launch Script",
      "type": "PowerShell",
      "request": "launch",
      "script": "${fileDirname}/${fileBasename}",
      "args": ["${input:ScriptArgs}"]
    }
  ],
  "inputs": [
    {
      "id": "ScriptArgs",
      "type": "promptString",
      "default": "",
      "description": "Extra arguments to be passed to the script as a single string"
    }
  ]
}
